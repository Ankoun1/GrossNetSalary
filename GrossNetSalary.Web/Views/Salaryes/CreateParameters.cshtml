@model Web.ViewModels.Salary.SalaryParametersFormModel

@{
    ViewData["Title"] = "CreateParameters";
}

<h1>
    Elements
</h1>

<h4>Salary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @Html.ValidationMessage("CustomErrorYear", new { @class = "text-danger" })
        <form asp-action="CreateParameters">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IncomeTax" class="control-label"></label>
                <input asp-for="IncomeTax" class="form-control" />
                <span asp-validation-for="IncomeTax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthAndSocialInsurance" class="control-label"></label>
                <input asp-for="HealthAndSocialInsurance" class="form-control" />
                <span asp-validation-for="HealthAndSocialInsurance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinInsuranceThreshold" class="control-label"></label>
                <input asp-for="MinInsuranceThreshold" class="form-control" />
                <span asp-validation-for="MinInsuranceThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxInsuranceThreshold" class="control-label"></label>
                <input asp-for="MaxInsuranceThreshold" class="form-control" />
                <span asp-validation-for="MaxInsuranceThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

