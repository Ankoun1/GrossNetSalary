@model Web.ViewModels.User.FindUserFormModel

@{
    ViewBag.Title = "Verification";
}

<h1>@ViewBag.Title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Find">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                @Html.ValidationMessage("CustomErrorEmail", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Serch" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Back to Login</a>
</div>

