@model List<Web.ViewModels.User.UserListingViewModel>

@{
    ViewBag.Title = "- - o";
}

<h2 class="text-center mt-2">@ViewBag.Title</h2>
<table class="table">   
    <tbody>
        <tr>           
            @for (int i = 0;i < Model.Count;i++)
            {
                <th>
                    @(i + 1)
                </th>
                <th>
                    @Model[i].FullName
                </th>

                <th>
                    @Model[i].Email
                </th>

                <td>
                    @if (!Model[i].IsDeleted)
                    {
                        <a class="text-success" asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                    }
                    else
                    {
                        <a class="text-dark" asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
                    }
                </td>
            }
        </tr>
    </tbody>
</table>

